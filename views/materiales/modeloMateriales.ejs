<%- include('../layouts/header.ejs'); %>
  <div id="layoutSidenav_content">
    <main>
      <header class="page-header page-header-dark bg-primary pb-10">
        <div class="container-xl px-4">
          <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
              <div class="col-auto mt-4">
                <h1 class="page-header-title">
                  <div class="page-header-icon">
                    <i data-feather="archive"></i>
                  </div>
                  Cátalogo de materiales
                </h1>
                <div class="page-header-subtitle">
                  Visualiza todos los materiales disponibles
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>
      <!-- Main page content-->
      <div class="container-xl px-4 mt-n10">
        <div class="card card-header-actions mb-4">
          <div class="card-header p-5">
            Plantilla de materiales
            <button class="btn btn-md btn-warning" type="button" data-toggle="modal" data-target="#modalCliente">
              Agregar material
            </button>
          </div>
          <div class="card-body">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Descripción</th>
                  <th>Opciones</th>
                </tr>
              </thead>
              <tbody>
                <% materiales.forEach(element=> { %>
                  <tr>
                    <td>
                      <%= element.Nombre %>
                    </td>
                    <td>
                      <%= element.Descripcion %>
                    </td>
                    <td>
                      <a class="btn btn-danger btnDeleteMateriales" data-id="<%= element.id_material %>" >Eliminar</a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <!-- Modal Agregar cliente -->

    <div class="modal fade" id="modalCliente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Agregar nuevo material</h5>
            <button type="button" class="close btn btn-light" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="formMateriales">
              <div class="row">
                <div class="col-md-12">
                  <label for="recipient-name" class="col-form-label">Nombre</label>
                  <input type="text" class="form-control" name="Nombre" />
                </div>
                <div class="col-md-12">
                  <label for="recipient-name" class="col-form-label">Descripción</label>
                  <textarea name="Descripcion" id="" cols="30" rows="4" class="form-control"></textarea>
                </div>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Cerrar
            </button>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </form>

        </div>
      </div>
    </div>

    <%- include('../layouts/footer.ejs'); %>
  <script src="/static/js/materiales.js"></script>