<%- include('../layouts/header.ejs'); %>
  <div id="layoutSidenav_content">
    <main>
      <header class="page-header page-header-dark bg-primary pb-10">
        <div class="container-xl px-4">
          <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
              <div class="col-auto mt-4">
                <h1 class="page-header-title">
                  <div class="page-header-icon">
                    <i data-feather="archive"></i>
                  </div>
                  Cotización hecha a cliente : Franklin López
                </h1>
                <div class="page-header-subtitle">
                  Visualiza la información de los productos de la cotización
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>
      <!-- Main page content-->
      <div class="container-xl px-4 mt-n10">
        <div class="card card-header-actions mb-4">
          <div class="card-header p-5">
            <a href="/cotizaciones" class="btn btn-md btn-primary"><i class="fas fa-arrow-left"></i></a>
            <button class="btn btn-md btn-warning" type="button" data-toggle="modal" data-target="#modalCliente">
              Agregar Producto
            </button>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <div class="card card-header-actions mb-4">
                  <div class="card-body">
                    <h3>Nombre producto</h3>
                    <p><span class="font-weight-bold">Costo: </span>$41.50 | Valor de venta : $50.00 </p>
                    <hr>
                    <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Sequi repudiandae consequuntur, asperiores voluptate doloremque eaque eum modi vero reiciendis id iure molestias ex adipisci? A pariatur dolores excepturi aliquam molestias.</p>
                    <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="card card-header-actions mb-4">
                  <div class="card-header p-5">
                    Materiales a utilizar
                    <button class="btn btn-md btn-success" type="button" data-toggle="modal" data-target="#modalCliente">
                      Agregar material
                    </button>
                  </div>
                  <div class="card-body table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <td>Nombre</td>
                            <td>Cantidad</td>
                            <td>Costo</td>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>Producto A</td>
                            <td>2</td>
                            <td>$41.50</td>
                          </tr>
                        </tbody>
                      </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Modal Agregar cliente -->

    <div class="modal fade" id="modalCliente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Agregar cliente</h5>
            <button type="button" class="close btn btn-light" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="formCotizaciones">
              <div class="row">
                <div class="col-md-12">
                  <label for="recipient-name" class="col-form-label">Seleccione cliente que desea la cotización</label>
                  <select name="id_cliente" required class="form-control" id="id_cliente" >
                      <option value="0" disabled selected>Seleccione Cliente</option>
                  </select>
                </div>
                <div class="col-md-12">
                  <label for="recipient-name" class="col-form-label">Seleccione la forma de pago</label>
                  <select name="FormaPago" required class="form-control" id="FormaPago" >
                      <option value="0" disabled selected>Seleccione forma de pago</option>
                      <option value="1">Efectivo</option>
                      <option value="2">Transferencia bancaria</option>
                      <option value="3">Cheque</option>
                  </select>
                </div>
                <div class="col-md-12">
                  <label for="recipient-name" class="col-form-label">Fecha de validez</label>
                  <input type="date" class="form-control" name="FechaValida" min="today"/>
                </div>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Cerrar
            </button>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </form>

        </div>
      </div>
    </div>

    <%- include('../layouts/footer.ejs'); %>
  <script src="/static/js/cotizaciones.js"></script>